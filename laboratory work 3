Задание 1
print("Вариант 1: Возведение в степень в зависимости от знака")
a = float(input("Введите число a: "))
b = float(input("Введите число b: "))
c = float(input("Введите число c: "))

if a >= 0:
    a_result = a ** 2
    print(f"Число a неотрицательное, результат: a^2 = {a_result}")
else:
    a_result = a ** 4
    print(f"Число a отрицательное, результат: a^4 = {a_result}")

if b >= 0:
    b_result = b ** 2
    print(f"Число b неотрицательное, результат: b^2 = {b_result}")
else:
    b_result = b ** 4
    print(f"Число b отрицательное, результат: b^4 = {b_result}")

if c >= 0:
    c_result = c ** 2
    print(f"Число c неотрицательное, результат: c^2 = {c_result}")
else:
    c_result = c ** 4
    print(f"Число c отрицательное, результат: c^4 = {c_result}")
Задание 2
print("\nВариант 2: Уменьшение числа по абсолютной величине")
a = float(input("Введите число a: "))
b = float(input("Введите число b: "))

if abs(a) > abs(b):
    a = a / 5
    print(f"Первое число больше по абсолютной величине")
    print(f"Уменьшенное первое число: a = {a}")
    print(f"Второе число: b = {b}")
else:
    print("Числа остаются без изменения")
    print(f"Первое число: a = {a}")
    print(f"Второе число: b = {b}")
Задание 3
print("\nВариант 3: Замена чисел по условию")
x = float(input("Введите число x: "))
y = float(input("Введите число y: "))

if x != y:
    if x < y:
        smaller = x
        larger = y
    else:
        smaller = y
        larger = x
    
    half_sum = (x + y) / 2
    double_product = 2 * x * y
    
    if x < y:
        x = half_sum
        y = double_product
    else:
        y = half_sum
        x = double_product
    
    print(f"Меньшее число заменено половиной суммы: {half_sum}")
    print(f"Большее число заменено удвоенным произведением: {double_product}")
    print(f"Результат: x = {x}, y = {y}")
else:
    print("Числа равны друг другу, преобразование не выполняется")
Задание 4
print("\nВариант 4: Замена чисел по условию равенства")
m = int(input("Введите целое число m: "))
n = int(input("Введите целое число n: "))

if m != n:
    larger = max(m, n)
    m = larger
    n = larger
    print(f"Числа не равны, заменяем оба на большее: {larger}")
    print(f"Результат: m = {m}, n = {n}")
else:
    m = 0
    n = 0
    print("Числа равны, заменяем оба на нули")
    print(f"Результат: m = {m}, n = {n}")
Задание 5
print("\nВариант 5: Подсчет отрицательных чисел")
a = float(input("Введите число a: "))
b = float(input("Введите число b: "))
c = float(input("Введите число c: "))

count = 0
if a < 0:
    count += 1
if b < 0:
    count += 1
if c < 0:
    count += 1

print(f"Количество отрицательных чисел среди a, b, c: {count}")
Задание 6
print("\nВариант 6: Подсчет положительных чисел")
a = float(input("Введите число a: "))
b = float(input("Введите число b: "))
c = float(input("Введите число c: "))

count = 0
if a > 0:
    count += 1
if b > 0:
    count += 1
if c > 0:
    count += 1

print(f"Количество положительных чисел среди a, b, c: {count}")

Вариант 7
print("\nВариант 7: Подсчет двухзначных чисел")
a = int(input("Введите целое число a: "))
b = int(input("Введите целое число b: "))
c = int(input("Введите целое число c: "))

count = 0
if 10 <= abs(a) <= 99:
    count += 1
if 10 <= abs(b) <= 99:
    count += 1
if 10 <= abs(c) <= 99:
    count += 1

print(f"Количество двухзначных чисел среди a, b, c: {count}")

Вариант 8
print("\nВариант 8: Анализ пожарного датчика")
temperature = float(input("Введите температуру в комнате (в °C): "))

if temperature > 60:
    print("Пожароопасная ситуация! Температура превысила 60°C")
else:
    print("Температура в норме")

Вариант 9
print("\nВариант 9: Сравнение массы пакетов")
m = float(input("Введите массу первого пакета (кг): "))
n = float(input("Введите массу второго пакета (кг): "))

if m > n:
    print("Первый пакет тяжелее второго")
elif m < n:
    print("Второй пакет тяжелее первого")
else:
    print("Пакеты имеют одинаковую массу")

